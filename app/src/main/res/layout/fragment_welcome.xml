<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:src="@drawable/ic_undraw_welcome"
            android:layout_width="0dp"
            android:layout_height="258dp"
            android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintVertical_chainStyle="packed" app:layout_constraintDimensionRatio="w,1:1"/>

    <TextView
            android:text="Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="30sp"
            android:fontFamily="sans-serif" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintBottom_toTopOf="@+id/textView5"
            android:layout_marginTop="8dp" android:textColor="@color/jetBlack"/>
    <TextView
            android:text="Preparing for First Use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:fontFamily="sans-serif-condensed" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintBottom_toTopOf="@+id/progressBar2" android:layout_marginTop="128dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Let's Go"
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="96dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="96dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>